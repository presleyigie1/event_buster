<!DOCTYPE html>
<html>
  <head>
    <title>Event Buster</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", media: "all" %>
  </head>

  <body>
    <nav class="nav-bar">
      <% if logged_in? %>
        <span>Welcome, <%= current_user.username %>!</span>
        <!-- logout using POST becuase delete was not working -->
        <%= button_to 'Logout', logout_path, method: :post, class: "button" %>
      <% else %>
        <%= link_to 'Login', login_path, class: "nav-link" %> |
        <%= link_to 'Sign Up', signup_path, class: "nav-link" %>
      <% end %>
    </nav>
      
    <main class="container">
      <%= yield %>
    </main>
  </body>
</html>
